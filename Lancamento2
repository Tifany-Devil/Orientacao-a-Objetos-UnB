class Geometria2D:
    def _init_(self, lados, largura, altura):
        self.lados = lados
        self.largura = largura
        self.altura = altura
        self.area = 0.0

    def perguntar_lados(self):
        self.lados = int(input("Digite a quantidade de lados: "))

    def perguntar_largura(self):
        self.largura = float(input("Digite a largura: "))

    def perguntar_altura(self):
        self.altura = float(input("Digite a altura: "))


class Quadrado(Geometria2D):
    def calcular(self):
        self.area = self.largura * self.largura

    def printar_resultado(self):
        print(f"A área do quadrado é: {self.area}")


class Retangulo(Geometria2D):
    def calcular(self):
        self.area = self.largura * self.altura

    def printar_resultado(self):
        print(f"A área do retângulo é: {self.area}")


class Triangulo(Geometria2D):
    def calcular(self):
        self.area = (self.largura * self.altura) / 2

    def printar_resultado(self):
        print(f"A área do triângulo é: {self.area}")
